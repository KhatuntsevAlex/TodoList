{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "airbnb",
        "prettier",
        "prettier/react"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"        
    ],
    "parser": "babel-eslint",
    "rules": {
      "jsx-quotes": [
        1,
        "prefer-double"
      ],
      "semi": ["error", "never"],
      "no-console": 2,
      "no-debugger": 2,
      "linebreak-style": ["error", "windows"],
      "react/prop-types": 0,
      "comma-dangle": ["error", "always-multiline"],
      "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }]
      
    }
}